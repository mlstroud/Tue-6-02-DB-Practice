@{
  Layout = "_Layout";
}

@using RecipeBox.Models
@model List<RecipeBox.Models.Ingredient>

<h3>Ingredients</h3>

@foreach (Ingredient ingredient in Model)
{
  <p>@Html.ActionLink($"{ingredient.Name}", "Details", "Ingredients", new {id = ingredient.IngredientId})</p>
}

<p>@Html.ActionLink("Add an Ingredient", "Create", "Ingredients")</p>